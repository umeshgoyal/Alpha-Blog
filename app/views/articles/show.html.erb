<h2 class="text-center mt-4"><%= @article.title%></h2>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="card text-center my-3 shadow-lg">
        <div class="card-header fst-italic">
          By Umesh Goyal
        </div>
        <div class="card-body">
          <div class="card-text text-start px-3"><%= simple_format(@article.description)%></div>
          <%=  link_to 'Edit', edit_article_path(@article) ,class: "btn btn-outline-info"%>
          <%=  link_to 'Delete', article_path(@article), data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } , class: "btn btn-outline-danger"%>
        </div>
        <div class="card-footer text-muted">
          <small>
            Created <%= time_ago_in_words(@article.created_at) %> ago,
            edited <%= time_ago_in_words(@article.updated_at) %> ago
          </small>
        </div>
      </div>
    </div>
  </div>
</div>




<% if false %>
  <h1>Showing Article Details</h1>
  <p><strong>Title: </strong> <%= @article.title %> </p>
  <p><strong>Description: </strong> <%= @article.description %></p>

  <p>
  <%=  link_to 'Edit', edit_article_path(@article) %> |
  <%=  button_to 'Delete', article_path(@article), method: :delete %> |
  <%=  link_to 'Return to articles listing', articles_path %>
  </p>
<%end%>




