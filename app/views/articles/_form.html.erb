<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors'%>
      <%= form_with(model: @article, class: "shadow-lg p-3 bg-info rounded",local: true, data: { turbo: false }) do |f| %>
        <div class="row mb-3">
          <%= f.label :title ,class: "col-sm-2 col-form-label text-light"%> 
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow-lg rounded", placeholder: "Title of article"%>
          </div>
          
        </div>
        
        <div class="row mb-3">
          <%= f.label :description ,class: "col-sm-2 col-form-label text-light"%>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow-lg rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="row mb-3 justify-content-center">
          <%= f.submit class: "btn btn-outline-light w-25"%>
        </div>
      <% end%>
    </div>
  </div>
  <div class="col-12 text-center mt-5 ">
    <%=  link_to '[ Cancel & Return to articles listing ]', articles_path, class: "text-info shadow-lg" %>
  </div>
  
</div>